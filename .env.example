# ============================================
# LLM Gateway Configuration
# ============================================
# cp .env.example .env

# ============================================
# Server Configuration
# ============================================
SERVER_HOST=0.0.0.0

# LLM Proxy API Port (Nginx)
PROXY_PORT=7620

# Dashboard Port (Nginx)
DASHBOARD_PORT=7621

# PostgreSQL External Port
POSTGRES_PORT=7622

# Redis External Port
REDIS_PORT=7623

# Internal Ports (container communication)
API_PORT=3000
DASHBOARD_INTERNAL_PORT=3001

# ============================================
# Database Configuration
# ============================================
POSTGRES_DB=llmgateway
POSTGRES_USER=llmgateway
POSTGRES_PASSWORD=llmgateway123

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PASSWORD=

# ============================================
# Security Configuration
# ============================================
JWT_SECRET=your-jwt-secret-change-in-production

# ============================================
# Admin Configuration
# ============================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Super Admin (comma-separated loginids)
DEVELOPERS=syngha.han

# ============================================
# SSO Configuration
# ============================================
SSO_BASE_URL=https://genai.samsungds.net:36810
SSO_CERT_PATH=/app/cert/cert.cer

# ============================================
# Rate Limit Defaults
# ============================================
DEFAULT_RPM=60
DEFAULT_TPM=100000
DEFAULT_TPH=1000000
DEFAULT_TPD=10000000

# ============================================
# Proxy Configuration
# ============================================
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1,.samsungds.net,postgres,redis,api,dashboard,nginx
NODE_TLS_REJECT_UNAUTHORIZED=0

# ============================================
# Logging
# ============================================
LOG_LEVEL=info
REQUEST_LOG_RETENTION_DAYS=30
